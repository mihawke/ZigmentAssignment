{
  "formTitle": "Registration Form",
  "formDescription": "Please fill out this survey about your project needs",
  "fields": [
    {
      "id": "name",
      "type": "text",
      "label": "Full Name",
      "required": true,
      "placeholder": "Enter your full name",
      "value": "Charlie Davis"
    },
    {
      "id": "email",
      "type": "email",
      "label": "Email Address",
      "required": true,
      "placeholder": "you@example.com",
      "validation": {
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
        "message": "Please enter a valid email address"
      }
    },
    {
      "id": "passowrd",
      "type": "password",
      "label": "Passowrd",
      "required": true,
      "placeholder": "passowrd",
      "validation": {
        "pattern": "^(?=.*[A-Za-z])(?=.*[@$!%*#?&])[A-Za-z@$!%*#?&]{8,}$",
        "message": "Passowrd: must be 8 characters long. At least 1 letter and 1 special character and no number"
      }
    }
  ]
}